@using C_SharpExam.DTO
@{
    ViewData["Title"] = "Home Page";

    
}
@model List<EmployeeGroupDto>

<div class="text-center">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Worked Hours</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr class="@(employee.HoursWorked < 100 ? "table-secondary" : "")">
                    <td>@employee.EmployeeName</td>
                    <td>@employee.HoursWorked</td>
                </tr>
            }

        </tbody>
    </table>
    <a class="btn btn-primary" href="/Home/GeneratePieChart" download="pie_chart.png">Generate Pie Chart</a>

</div>


